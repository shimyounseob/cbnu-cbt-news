</style>
            
            <!--우측 콘텐츠 헤더영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>관리자정보관리</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/Home/Index">Home</a>
                        </li>
                        <li>
                            <a>관리자정보관리></a>
                        </li>
                        <li class="active">
                            <strong>>관리자정보확인</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">
                <form method="post" action="/admin/modify">
                    <input type="hidden" name="admin_member_id" value="<%=admin.admin_member_id%>"/>

                    <div class="ibox-content m-b-sm border-bottom">

                        <!-- 관리자계정/암호/ UI제공 -->
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">관리자아이디</label>
                                    <input type="text" name="admin_id" readonly value="<%=admin.admin_id%>" class="form-control"/>
                                </div>
                            </div>
                            
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">관리자 암호</label>
                                    <input type="password" name="admin_password" class="form-control" placeholder="비밀번호는 10자 이상 작성하세요" >
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">관리자 암호 확인</label>
                                    <input type="password" name="admin_password_confirm" class="form-control" placeholder="비밀번호를 한번 더 입력해주세요">
                                </div>
                            </div>

                        </div>

                        <!-- 이름/메일주소/ 사용여부 UI제공 -->
                        <div class="row">
                            
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">이름</label>
                                    <input type="text" name="admin_name" class="form-control" value="<%=admin.admin_name%>">
                                </div>
                            </div>
    
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">메일주소</label>
                                    <input type="text" name="email" class="form-control" value="<%=admin.email%>">
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">사용여부</label>
                                    <select id="use_yn_code" name="use_yn_code" class="form-control">
                                        <option value="0" <% if(admin.used_yn_code == "0"){%>selected <% } %> >사용안함</option>
                                        <option value="1" <% if(admin.used_yn_code == "1"){%>selected <% } %> >사용함</option>
                                    </select>
                                </div>
                            </div>

                        </div>

                        <!-- 권한설정 UI제공 -->
                        <div class="row">
                            
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">권한설정</label>
                                    <select id="permission_level" name="permission_level" class="form-control">
                                        <option value="9" <% if(admin.permission_level == "9"){%>selected <% } %> >선택</option>
                                        <option value="0" <% if(admin.permission_level == "0"){%>selected <% } %> >게시글 관리</option>
                                        <option value="1" <% if(admin.permission_level == "1"){%>selected <% } %> >계정+게시글 관리</option>
                                    </select>
                                </div>
                            </div>
    
                             
                            </div>
                        </div>


                        <!-- 저장/목록이동 버튼영역 -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">수정</button>
                            <button type="button" id="btnDelete" class="btn btn-danger">삭제</button>
                            <a href="/admin/list" class="btn btn-info">목록</a>
                        </div>
    
                    </div>
                </form>
            </div>


<script>

    $("#btnDelete").click(function(){
        if(confirm('정말로 삭제하시겠습니까?')){
           location.href="/admin/delete?id=<%=admin.admin_member_id%>"; 
        }
    });

</script>
