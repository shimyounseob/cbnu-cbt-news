            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">
                <form method="post" action="/admin/create">
                    <div class="ibox-content m-b-sm border-bottom">

                        <!-- 관리자계정/암호 UI제공 -->
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">관리자 아이디</label>
                                    <input type="text" name="admin_id" placeholder="아이디는 8자 이상 작성하세요" required class="form-control"/>
                                </div>
                            </div>
                            
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">관리자 암호</label>
                                    <input type="password" name="admin_password" class="form-control" placeholder="비밀번호는 10자 이상 작성하세요" required >
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">관리자 암호 확인</label>
                                    <input type="password" name="admin_password_confirm" class="form-control" placeholder="비밀번호를 한번 더 입력해주세요" required>
                                </div>
                            </div>

                            
    
                        </div>

                        <!-- 이름/메일주소/사용여부 UI제공 -->
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">이름</label>
                                    <input type="text" name="admin_name" class="form-control" value="" required>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">메일 주소</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="example@example.com" required>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">사용 여부</label>
                                     <select id="use_yn_code" name="use_yn_code" class="form-control" required>
                                        <option value="1">사용함</option>
                                        <option value="0">사용안함</option>
                                    </select>
                                </div>
                            </div>

                        </div>

